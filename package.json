{
  "name": "convention-app",
  "version": "0.1.0",
  "type": "module",
  "description": "Aplicación fullstack para gestión de convenciones con React y Express (Arquitectura Hexagonal)",
  "private": true,
  "scripts": {
    "start": "nx serve frontend",
    "start:front": "vite --port 4200 --config apps/frontend/vite.config.ts",
    "start:back": "cross-env NODE_ENV=development tsx --tsconfig apps/backend/tsconfig.json apps/backend/src/main.ts",
    "build": "npm run copy:firebase-config && nx build",
    "build:front": "npm run copy:firebase-config && nx build frontend",
    "build:back": "nx build backend",
    "test": "nx test",
    "test:watch": "nx test --watch",
    "lint": "nx lint",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "deploy:functions": "cd functions && npm install && cd .. && firebase deploy --only functions",
    "serve:functions": "cd functions && npm install && cd .. && firebase emulators:start --only functions",
    "copy:firebase-config": "node apps/frontend/scripts/copy-firebase-config.mjs"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@nestjs/config": "^4.0.2",
    "@types/react": "^19.1.8",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.3.2",
    "jsonwebtoken": "^9.0.2",
    "path-browserify": "^1.0.1",
    "react-router-dom": "^7.6.3",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint-plugin": "^21.2.2",
    "@nx/express": "^21.2.2",
    "@nx/jest": "21.2.2",
    "@nx/js": "21.2.2",
    "@nx/node": "21.2.2",
    "@nx/react": "21.2.2",
    "@nx/vite": "21.2.2",
    "@nx/web": "21.2.2",
    "@nx/workspace": "^21.2.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@svgr/webpack": "^8.0.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.1.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "^21.2.2",
    "prettier": "^2.6.2",
